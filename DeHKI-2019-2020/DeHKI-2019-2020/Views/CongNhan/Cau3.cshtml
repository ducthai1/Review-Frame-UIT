<form action="/CongNhan/LietKeCN" method="post">
    <label>Tên điểm cách ly</label>
    <input type="date"/>
    <select name="MaDiemCachLy" class="MaDiemCachLy">
        @foreach (var item in ViewBag.listDCL)
        {
            <option value="@item.MaDiemCachLy">@item.TenDiemCachLy</option>
        }
    </select>
    <button>Liệt Kê</button>
</form>

