@{
    Layout = null;
}
        <label>Mã công nhân</label>
        <input type="text" value="@ViewBag.listCN.MaCongNhan" />
        <br />
        <label>Tên công nhân</label>
        <input type="text" value="@ViewBag.listCN.TenCongNhan" />
        <br />
        <label>Giới tính</label>
        @if (ViewBag.listCN.GioiTinh == true)
        {
            <input type="checkbox" name="GioiTinh" checked />
        }
        else
        {
            <input type="checkbox" name="GioiTinh" />
        }
        <br />
        <label>Năm sinh</label>
        <input type="text" value="@ViewBag.listCN.NamSinh" />
        <br />
        <label>Nước về</label>
        <input type="text" value="@ViewBag.listCN.NuocVe" />